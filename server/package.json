{
  "name": "server",
  "version": "1.0.0",
  "scripts": {
    "dev": "nodemon index.js",
    "start": "node index.js",
    "test": "echo 'No tests configured yet'",
    "migrate": "node db/run-migration.js",
    "init-db": "node db/init-db.js",
    "init-db-psql": "psql -U postgres -d record_sys -f db/schema.sql",
    "check-db": "node db/check-db.js",
    "test-connection": "node test-connection.js",
    "clear-port": "node -e \"require('./utils/port-manager').checkAndFreePort(5000, true)\"",
    "safe-start": "npm run clear-port && npm start",
    "backfill-customers": "node db/backfill-customers.js"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^17.2.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.16.3"
  },
  "devDependencies": {
    "nodemon": "^3.1.10"
  }
}
